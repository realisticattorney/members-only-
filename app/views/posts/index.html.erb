<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <% if user_signed_in? %>
        <td> <%= post.user.username %> </td>
        <% end %>
    <% end %>
  </tbody>
</table>
